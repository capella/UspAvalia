# Database Configuration
# For SQLite (default - no setup required):
USPAVALIA_DATABASE_TYPE=sqlite
USPAVALIA_DATABASE_PATH=./uspavalia.db

# For MySQL (uncomment and configure):
# USPAVALIA_DATABASE_TYPE=mysql
# USPAVALIA_DATABASE_HOST=localhost
# USPAVALIA_DATABASE_PORT=3306
# USPAVALIA_DATABASE_USER=root
# USPAVALIA_DATABASE_PASSWORD=
# USPAVALIA_DATABASE_NAME=uspavalia

# Server Configuration
USPAVALIA_SERVER_HOST=localhost
USPAVALIA_SERVER_PORT=8080
USPAVALIA_SERVER_URL=http://localhost:8080

# Security Configuration
USPAVALIA_SECURITY_SECRET_KEY=change-this-in-production-32-bytes-long-key
USPAVALIA_SECURITY_CSRF_KEY=another-32-byte-key-for-csrf-protection
USPAVALIA_SECURITY_SESSION_NAME=uspavalia_session

# OAuth Configuration - Facebook
USPAVALIA_OAUTH_FACEBOOK_CLIENT_ID=your-facebook-app-id
USPAVALIA_OAUTH_FACEBOOK_CLIENT_SECRET=your-facebook-app-secret
USPAVALIA_OAUTH_FACEBOOK_REDIRECT_URL=http://localhost:8080/auth/facebook/callback

# OAuth Configuration - Google
USPAVALIA_OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
USPAVALIA_OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
USPAVALIA_OAUTH_GOOGLE_REDIRECT_URL=http://localhost:8080/auth/google/callback

# Email Configuration (SendGrid for production)
USPAVALIA_EMAIL_SENDGRID_API_KEY=your-sendgrid-api-key
USPAVALIA_EMAIL_FROM_EMAIL=noreply@uspavalia.com
USPAVALIA_EMAIL_FROM_NAME=USP Avalia
USPAVALIA_EMAIL_BASE_URL=http://localhost:8080

# Old Database Configuration (for import-old-data command)
# This is the legacy PHP/MySQL database to import from
USPAVALIA_OLD_DATABASE_HOST=localhost
USPAVALIA_OLD_DATABASE_PORT=3306
USPAVALIA_OLD_DATABASE_USER=root
USPAVALIA_OLD_DATABASE_PASSWORD=
USPAVALIA_OLD_DATABASE_NAME=uspavalia_old

# Docker Compose specific (used by docker-compose-go.yml)
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret